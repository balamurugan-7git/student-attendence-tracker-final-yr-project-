{
    "name": "Online Exam System",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {}
    },
    "postCreateCommand": "pip install -r requirements.txt && python db_setup.py && python seed_data.py",
    "forwardPorts": [
        5000
    ],
    "portsAttributes": {
        "5000": {
            "label": "Online Exam Web App",
            "onAutoForward": "openPreview"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}